<manifest package="com.danielbostwick.stopwatch"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".app.StopwatchApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Stopwatch">

        <activity
            android:name=".app.stopwatch.StopwatchActivity">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER"/>
                <action android:name="android.intent.action.MAIN"/>
            </intent-filter>
        </activity>

        <service android:name=".app.service.StopwatchAndroidService"/>
    </application>

</manifest>
