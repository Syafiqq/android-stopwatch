<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.github.syafiqq.dump.stopwatch.StopwatchActiviy">

    <TableLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="S1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/start1"/>

            <Button
                    android:text="S2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop1"/>

            <Button
                    android:text="R"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reset1"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/counter1"
                    android:layout_weight="1"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lap1"
                    android:layout_weight="1"/>
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="S1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/start2"/>

            <Button
                    android:text="S2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop2"/>

            <Button
                    android:text="R"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reset2"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/counter"
                    android:layout_weight="1"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lap"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="S1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/start3"/>

            <Button
                    android:text="S2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop3"/>

            <Button
                    android:text="R"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reset3"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/counter2"
                    android:layout_weight="1"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lap2"
                    android:layout_weight="1"/>

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <Button
                    android:text="S1"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/start4"/>

            <Button
                    android:text="S2"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/stop4"/>

            <Button
                    android:text="R"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/reset4"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/counter3"
                    android:layout_weight="1"/>

            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/lap3"
                    android:layout_weight="1"/>
        </TableRow>

    </TableLayout>
</android.support.constraint.ConstraintLayout>
